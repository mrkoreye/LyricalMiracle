<div id="new-annotation-modal" class="modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
				
      <button type="button" id="new-annotation-modal-close" class="close" aria-hidden="true">&times;</button>
				
				
        <h4 class="modal-title">New Annotation</h4>
      </div>
			<div class="modal-body">
			<form id="new-annotation">
				<div id="annotation-blank-error">
				</div>
				<div id="text-to-annotate">
				</div>
				<input type="hidden" name="annotation[song_id]" value="<%= song.id %>">
				<textarea class="form-control" id="annotation_body" name="annotation[body]" rows="5"></textarea>
			
        
				<br>
        <button value="submit" type="btn btn-default" class="btn btn-primary">Create Annotation</button>
				
			</form>
		</div>
    </div>
		<!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
