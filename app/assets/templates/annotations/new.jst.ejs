<div id="new-annotation-modal" class="modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
				
        <button type="button" id="new-annotation-modal-close" class="close" aria-hidden="true">&times;</button>
				
				
        <h4 class="modal-title">Add an Annotation</h4>
      </div>
			<div class="modal-body">
			<form id="new-annotation">
				
				<div id="text-to-annotate">
				</div>
				
				<textarea class="form-control" id="annotation_body" name="annotation[body]" placeholder="Write your annotation here. Include html links to images or embedded YouTube videos if you like!" rows="5"></textarea>
			
        
				<br>
        <button value="submit" type="btn-default" class="btn btn-primary">Create Annotation</button>
				
			</form>
		</div>
    </div>
		<!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->