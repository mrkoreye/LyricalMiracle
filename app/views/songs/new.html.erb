<h1>Add a new Song</h1>

<form action="<%= songs_url %>" method="post" role="form">
	<input type="hidden" name="authenticity_token"
											 value="<%= form_authenticity_token %>">
	
  <div class="form-group">
		<label for="song_title">Title</label>
		<input class="form-control" type="text" id="song_title" name="song[title]">
  </div>
  <div class="form-group">
		<label for="song_artist">Artist</label>
		<input class="form-control" type="text" id="song_artist" 						                   name="song[artist]">
  </div>
  <div class="form-group">
		<label for="song_album">Album</label>
		<input class="form-control" type="text" id="song_album" name="song[album_title]">
  </div>
	<div class="form-group">
		<label for="song_lyrics">Lyrics</label>
		<textarea class="form-controle" cols="100" rows="10" id="song_lyrics" name="song[body]"></textarea>
	</div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
